{
  "name": "@react-fluent-edit/core",
  "version": "3.0.0",
  "license": "MIT",
  "description": "Slate based editor powered by plugins",
  "main": "./src/index.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sodenn/react-fluent-edit.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/sodenn/react-fluent-edit",
  "author": {
    "name": "sodenn",
    "email": "mail@sodenn.dev"
  },
  "scripts": {
    "build": "run-s clean build:all copy",
    "clean": "rimraf lib",
    "copy": "node ../../scripts/copy-files.js",
    "build:all": "run-p build:esm build:cjs",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "publish": "node ../../scripts/publish.js"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "slate": "^0.81.3 || ^0.87.0",
    "slate-history": "^0.66.0 || ^0.86.0",
    "slate-react": "^0.81.0 || ^0.87.0 || ^0.90.0"
  }
}
